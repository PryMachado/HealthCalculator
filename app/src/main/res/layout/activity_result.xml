<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blue">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/healthcalculator" />

    <TextView
        android:textColorHint="@color/black"
        android:textColor="@color/blue"
        android:layout_marginTop="19dp"
        android:text="Seu IMC Ã©:"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/blue"
        android:id="@+id/textview_result"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="27.104"
        android:textAlignment="center"
        android:padding="16dp"
        android:textSize="25sp"/>



    <TextView
        android:textColor="@color/black"
        android:id="@+id/textview_Classificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Classificacao: Normal"
        android:layout_margin="8dp"
        android:textAlignment="center"/>


    <TextView
        android:textColor="@color/blue"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="VEJA A TABELA ABAIXO:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/imc8" />



    <TextView
        android:textAlignment="center"
        android:textColor="@color/verdee"
        android:textStyle="bold"
        android:text="MENOR QUE 18,5 ABAIXO DO PESO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="center"
        android:textColor="@color/verde"
        android:textStyle="bold"
        android:text="ENTRE 18,5 E 24,9 NORMAL "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="center"
        android:textColor="@color/amarelo"
        android:textStyle="bold"
        android:text="ENTRE 25,0 E 29,0	RISCO DE SOBREPESO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTRE 30,0 E 35,0O SOBREBESO "
        android:textColor="@color/ouro"
        android:textStyle="bold" />

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAIOR QUE 35,00 OBESIDADE GRAVE "
        android:textColor="@color/vermelho"
        android:textStyle="bold" />

</LinearLayout>





